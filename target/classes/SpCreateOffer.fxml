                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="421.0" prefHeight="59.0" prefWidth="1192.0">
               <children>
                  <Button minWidth="110.0" mnemonicParsing="false" onMouseClicked="#createOffer" styleClass="buttonAdmin" text="Create" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" minWidth="150.0" prefHeight="100.0" prefWidth="150.0">
               <children>
                  <Button minWidth="110.0" mnemonicParsing="false" onMouseClicked="#backButtonAction" styleClass="buttonAdmin" text="Back">
                     <HBox.margin>
                        <Insets left="50.0" right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="250.0" />
               </VBox.margin>
            </VBox>
