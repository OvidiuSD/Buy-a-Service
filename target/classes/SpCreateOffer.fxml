   <children>
      <VBox alignment="CENTER" prefHeight="800.0" prefWidth="1193.0">
         <children>
            <Label fx:id="fxNameLabel" text="Create offer" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
               <font>
                  <Font name="Verdana Bold" size="40.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" minHeight="40.0" prefHeight="40.0" prefWidth="200.0">
