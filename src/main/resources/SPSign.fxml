<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="550.0" styleClass="backgroundOut" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.SPSign">
   <children>
      <VBox alignment="CENTER" prefHeight="700.0" prefWidth="550.0">
         <children>
            <Label text="Sign up as SP">
               <font>
                  <Font name="Verdana" size="55.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Username:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="userField">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="356.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Password: ">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="-10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <PasswordField fx:id="passField" minHeight="44.0" minWidth="249.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="256.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Email:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="emailField">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="-40.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="456.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="First name:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="firstNameField">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="506.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Last name:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="lastNameField">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="556.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Phone:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="phoneField">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="-25.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="624.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Domain:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="domainCombo" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="606.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Certificate:">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="fileLabel">
                     <font>
                        <Font name="Verdana" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" onMouseClicked="#browseButtonAction" text="Browse" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="634.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#signButtonAction" styleClass="buttonOut" text="Sign up">
                     <font>
                        <Font name="Verdana" size="25.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#backButtonAction" prefWidth="130.0" styleClass="buttonOut" stylesheets="@style.css" text="Back">
                     <font>
                        <Font name="Verdana" size="25.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
